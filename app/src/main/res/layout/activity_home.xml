<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeAct">
<LinearLayout
    android:background="#1E88E5"
    android:layout_width="match_parent"
    android:layout_height="56dp">

</LinearLayout>
    <TextView
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Utama"
        android:textStyle="bold"
        android:textColor="#000"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/cvSewa"
            android:layout_margin="8dp"
            android:layout_marginRight="16dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/rvPesan"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:id="@+id/image1"
                    android:layout_centerInParent="true"
                    android:src="@drawable/order"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/image1"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sewa"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cvStatus"
            android:layout_margin="8dp"
            android:layout_marginRight="16dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/rvStatus"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentTop="true"
                    android:id="@+id/image2"
                    android:layout_centerInParent="true"
                    android:src="@drawable/status"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/image2"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cvApprove"
            android:layout_margin="8dp"
            android:layout_marginRight="16dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/rvApprove"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:src="@drawable/approv" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/image4"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aproval"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cvAbout"
            android:layout_margin="8dp"
            android:layout_marginRight="16dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/rvAbout"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:src="@drawable/about" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/image5"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>
    <TextView
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Tambahan"
        android:textStyle="bold"
        android:textColor="#000"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_marginRight="16dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/rvLogout"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logout" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/image"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>
</LinearLayout>